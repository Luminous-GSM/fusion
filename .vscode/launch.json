    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceRoot}",
            "env": {
                "FUSION_CONFIG_PATH": "fusion.yaml",
                "FUSION_NODE_UNIQUE_ID": "UniqueId",
                "FUSION_API_SECURITY_TOKEN": "SuperSecretToken",
                "FUSION_CONSOLE_LOCATION": "http://localhost:3200",
                "FUSION_SYSTEM_LOG_DIRECTORY": "./fusion/logs/",
                "FUSION_SYSTEM_DATA_DIRECTORY": "./fusion/data/",
                "FUSION_SYSTEM_ROOT_DIRECTORY": "./fusion/root/",
              }
        }
    ]
}